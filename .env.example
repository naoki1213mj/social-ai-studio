# Social AI Studio — Environment Variables
# Copy this file to .env and fill in your values.

# Microsoft Foundry project endpoint (required)
PROJECT_ENDPOINT=<your-foundry-project-endpoint>

# Model deployment names
MODEL_DEPLOYMENT_NAME=gpt-5.2
IMAGE_DEPLOYMENT_NAME=gpt-image-1.5

# VECTOR_STORE_ID is auto-generated on first run — leave empty
VECTOR_STORE_ID=

# Azure Cosmos DB (optional — uses in-memory if not set)
COSMOS_ENDPOINT=<your-cosmos-account-endpoint>
COSMOS_DATABASE=social-ai-studio
COSMOS_CONTAINER=conversations

# Foundry IQ / Azure AI Search (optional)
AI_SEARCH_ENDPOINT=<your-ai-search-endpoint>
AI_SEARCH_KNOWLEDGE_BASE_NAME=<your-knowledge-base-name>
AI_SEARCH_REASONING_EFFORT=low

# Debug mode (optional)
DEBUG=false

# Observability — OpenTelemetry + Azure Application Insights (optional)
# Enables distributed tracing visible in App Insights + Foundry portal
APPLICATIONINSIGHTS_CONNECTION_STRING=<your-appinsights-connection-string>
OTEL_SERVICE_NAME=social-ai-studio
# Set to true to record prompts/responses in traces (dev only)
AZURE_TRACING_GEN_AI_CONTENT_RECORDING_ENABLED=false

# Evaluation model for Foundry Evaluation (optional)
EVAL_MODEL_DEPLOYMENT=gpt-4o-mini

# Azure AI Content Safety (optional)
# Enables harmful content detection + prompt injection shield
CONTENT_SAFETY_ENDPOINT=<your-content-safety-endpoint>

# Server config (optional)
# HOST=0.0.0.0
# PORT=8000
# SERVE_STATIC=false
